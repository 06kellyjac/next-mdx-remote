{
  "name": "next-mdx-remote",
  "description": "utilities for loading mdx from any remote source as data, rather than as a local import",
  "version": "1.0.0",
  "author": "Jeff Escalante",
  "homepage": "https://github.com/hashicorp/next-mdx-remote#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hashicorp/next-mdx-remote.git"
  },
  "bugs": {
    "url": "https://github.com/hashicorp/next-mdx-remote/issues"
  },
  "main": "index.js",
  "scripts": {
    "lint": "prettier --write \"./**/*.{ts,tsx,js,jsx,json}\"",
    "test": "tsc && jest",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "release:major": "release major && tsc && npm publish",
    "release:minor": "release minor && tsc && npm publish",
    "release:patch": "release patch && tsc && npm publish"
  },
  "dependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@mdx-js/mdx": "^1.6.16",
    "@mdx-js/react": "^1.6.16"
  },
  "devDependencies": {
    "@hashicorp/remark-plugins": "^3.0.0",
    "@types/babel__preset-env": "^7.9.0",
    "@types/mdx-js__react": "^1.5.2",
    "@types/react-dom": "^16.9.8",
    "cross-spawn": "^7.0.3",
    "express": "^4.17.1",
    "gray-matter": "^4.0.2",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "next": "^9.5.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "puppeteer": "^5.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "release": "^6.3.0",
    "rmfr": "^2.0.0",
    "serve-handler": "^6.1.3",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run typecheck"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "fixtures"
    ],
    "verbose": true
  },
  "keywords": [
    "markdown",
    "mdx",
    "next",
    "next.js"
  ],
  "sideEffects": false,
  "license": "MPL-2.0"
}
